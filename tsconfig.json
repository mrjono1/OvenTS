{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "paths": {
      "configuration/*": ["configuration/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],

  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
